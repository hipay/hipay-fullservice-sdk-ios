source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'

target 'HiPayFullservice_Example' do
  pod 'HiPayFullservice', :path => '../'
  pod 'HockeySDK'

  target 'HiPayFullservice_Tests' do
  	 inherit! :search_paths

     pod 'HiPayFullservice', :path => '../'
	 pod 'OCMock'
	 pod 'OHHTTPStubs'
  end
end

